                <icaro:Instancia id="robotMasterIA3" refDescripcion="AgenteAplicacionrobotMasterIA">
                </icaro:Instancia>
                <icaro:Instancia id="robotMasterIA4" refDescripcion="AgenteAplicacionrobotMasterIA">
                </icaro:Instancia> 
        </icaro:AgentesAplicacion>
